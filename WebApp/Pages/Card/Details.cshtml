@page
@model WebApp.Pages.Card.DetailsModel
@{
  ViewData["Title"] = "Details";
  Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="card card-sm">
  <div class="card-header">
    <h4>
      <strong>Card</strong>
      <small>Details</small>
    </h4>
  </div>
  <form method="post" novalidate="novalidate">
    <div class="card-body">
      <div class="col-xl-8 offset-xl-2">
        <div class="text-danger validation-summary-valid d-none" data-valmsg-summary="true">
          <ul>
            <li class="d-none"></li>
          </ul>
        </div>
        <div class="row">
          <div class="form-group col-md-6">
            <label asp-for="Input.Card" class="control-label"></label>
            <input asp-for="Input.Card" class="form-control" />
            <span asp-validation-for="Input.Card" class="text-danger"></span>
          </div>
          <div class="form-group col-md-6">
            <label asp-for="Input.Balance" class="control-label"></label>
            <input type="text" asp-for="Input.Balance" class="form-control" />
            <span asp-validation-for="Input.Balance" class="text-danger"></span>
          </div>
        </div>
      </div><!-- /.col -->

      <table data-order='[[ 0, "asc" ]]' class="table table-striped table-bordered table-responsive datatable">
        <thead>
          <tr>
            <th>
              @Html.DisplayNameFor(model => model.Input.TranDate)
            </th>
            <th>
              @Html.DisplayNameFor(model => model.Input.TranType)
            </th>
            <th>
              @Html.DisplayNameFor(model => model.Input.MerchantName)
            </th>
            <th>
              @Html.DisplayNameFor(model => model.Input.MerchantId)
            </th>
            <th>
              @Html.DisplayNameFor(model => model.Input.Currency)
            </th>
            <th>
              @Html.DisplayNameFor(model => model.Input.Amount)
            </th>
            <th class="text-center datatable-actions"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              12341234
            </td>
            <td>
              007
            </td>
            <td>
              123456
            </td>
            <td>
              19/2020
            </td>
            <td>
              19/2020
            </td>
            <td>
              19/2020
            </td>
            <td class="text-center text-nowrap">
              <a title="Edit" class="btn btn-success">
                <i class="fa fa-edit"></i>
              </a>&nbsp;
              <a title="Delete" class="btn btn-secondary">
                <i class="fa fa-trash"></i>
              </a>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="card-footer">
      <div class="form-group mb-0">
        <a class="btn btn-secondary" asp-page="./Index">
          <i class="fa fa-caret-left"></i>
          Back
        </a>
      </div>
    </div>
  </form>
</div>
