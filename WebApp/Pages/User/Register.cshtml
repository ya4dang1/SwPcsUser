@page

@model RegisterModel
@{
  ViewData["Title"] = "Register User";
  Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="card card-sm">
  <div class="card-header">
    <h4>
      <strong>Create</strong>
      <small>Account</small>
    </h4>
  </div>
  <form method="post" novalidate="novalidate">
    <div class="card-body">
      <div class="col-xl-8 offset-xl-2">
        <div class="text-danger validation-summary-valid d-none" data-valmsg-summary="true">
          <ul>
            <li class="d-none"></li>
          </ul>
        </div>
        <div class="form-group row">
          <label class="col-md-3 col-form-label font-weight-bold">@Localizer["Email"]</label>
          <div class="col-md">
            <input asp-for="Input.Email" class="form-control" readonly />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
          </div>
          <div class="col-md"></div>
        </div>
        <div class="row">
          <label class="col-md-3 col-form-label font-weight-bold">@Localizer["Name"]</label>
          <div class="form-group col-md">
            <input asp-for="Input.FirstName" class="form-control" />
            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
          </div>
          <div class="form-group col-md">
            <input asp-for="Input.MiddleName" class="form-control" />
            <span asp-validation-for="Input.MiddleName" class="text-danger"></span>
          </div>
          <div class="form-group col-md">
            <input asp-for="Input.LastName" class="form-control" />
            <span asp-validation-for="Input.LastName" class="text-danger"></span>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-md-3 col-form-label font-weight-bold">@Localizer["Birthday"]</label>
          <div class="col-md">
            <input asp-for="Input.Birthday" class="form-control datepicker-date" value="" type="datetime" />
            <span asp-validation-for="Input.Birthday" class="text-danger"></span>
          </div>
          <div class="col-md"></div>
        </div>
        <div class="form-group row">
          <label class="col-md-3 col-form-label font-weight-bold">@Localizer["Address"]</label>
          <div class="col-md">
            <input asp-for="Input.AddressType" class="form-control" />
            <span asp-validation-for="Input.AddressType" class="text-danger"></span>
          </div>
          <div class="col-md"></div>
        </div>
        <div class="row">
          <div class="form-group offset-md-3 col-md">
            <input asp-for="Input.Address" class="form-control" />
            <span asp-validation-for="Input.Address" class="text-danger"></span>
          </div>
          <div class="form-group col-md">
            <input asp-for="Input.City" class="form-control" />
            <span asp-validation-for="Input.City" class="text-danger"></span>
          </div>
        </div>
        <div class="row">
          <div class="form-group offset-md-3 col-md">
            <input asp-for="Input.Region" class="form-control" />
            <span asp-validation-for="Input.Region" class="text-danger"></span>
          </div>
          <div class="form-group col-md">
            <input asp-for="Input.Zip" class="form-control" />
            <span asp-validation-for="Input.Zip" class="text-danger"></span>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-md-3 col-form-label font-weight-bold">@Localizer["Mobile"]</label>
          <div class="col-md">
            <input asp-for="Input.Mobile" class="form-control" />
            <span asp-validation-for="Input.Mobile" class="text-danger"></span>
          </div>
          <div class="col-md"></div>
        </div>
        <div class="form-group row">
          <label class="col-md-3 col-form-label font-weight-bold">@Localizer["IDValue"]</label>
          <div class="col-md">
            <input asp-for="Input.IDValue" class="form-control" />
            <span asp-validation-for="Input.IDValue" class="text-danger"></span>
          </div>
          <div class="col-md"></div>
          </div>
        </div><!-- /.col -->
    </div>
    <div class="card-footer">
      <div class="form-group mb-0">
        <a class="btn btn-secondary d-none" href="">
          <i class="fa fa-caret-left"></i>
          Back
        </a>
        <button type="submit" value="Create" class="btn btn-primary">
          <i class="far fa-dot-circle"></i> Create Account
        </button>
      </div>
    </div>
  </form>
</div>
