@page
@model UpdateProfileModel
@{
  ViewData["Title"] = "Update User Profile";
  Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="card card-sm">
  <div class="card-header">
    <h4>
      <strong>@Localizer["Update"]</strong>
      <small>@Localizer["Profile"]</small>
    </h4>
  </div>
  <form method="post" novalidate="novalidate">
    <div class="card-body">
      <div class="col-xl-8 offset-xl-2">
        <div class="row">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <ul>
            <li class="d-none"></li>
          </ul>
        </div>
        <div class="row mb-4">
          <div class="col-12">
            <h5 class="text-danger">@Localizer["Please complete the profile to register cards."]</h5>
          </div>
        </div>
        <div class="form-group row">
          <label asp-for="Input.Email" class="col-md-3 col-form-label font-weight-bold"></label>
          <div class="col-md">
            <input asp-for="Input.Email" class="form-control" readonly />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
          </div>
          <div class="col-md"></div>
        </div>
        <div class="row">
          <label asp-for="Input.FullName" class="col-md-3 col-form-label font-weight-bold"></label>
          <div class="form-group col-md">
            <input asp-for="Input.FirstName" class="form-control" />
            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
          </div>
          <div class="form-group col-md">
            <input asp-for="Input.MiddleName" class="form-control" />
            <span asp-validation-for="Input.MiddleName" class="text-danger"></span>
          </div>
          <div class="form-group col-md">
            <input asp-for="Input.LastName" class="form-control" />
            <span asp-validation-for="Input.LastName" class="text-danger"></span>
          </div>
        </div>
        <div class="form-group row">
          <label asp-for="Input.Birthday" class="col-md-3 col-form-label font-weight-bold"></label>
          <div class="col-md">
            <input asp-for="Input.Birthday" class="form-control dataformat-date" type="datetime" />
            <span asp-validation-for="Input.Birthday" class="text-danger"></span>
          </div>
          <div class="col-md"></div>
        </div>
        <div class="form-group row">
          <label asp-for="Input.Address" class="col-md-3 col-form-label font-weight-bold"></label>
          <div class="col-md">
            <input asp-for="Input.AddressType" class="form-control" />
            <span asp-validation-for="Input.AddressType" class="text-danger"></span>
          </div>
          <div class="col-md"></div>
        </div>
        <div class="row">
          <div class="form-group offset-md-3 col-md">
            <input asp-for="Input.Address" class="form-control" />
            <span asp-validation-for="Input.Address" class="text-danger"></span>
          </div>
          <div class="form-group col-md">
            <input asp-for="Input.City" class="form-control" />
            <span asp-validation-for="Input.City" class="text-danger"></span>
          </div>
        </div>
        <div class="row">
          <div class="form-group offset-md-3 col-md">
            <input asp-for="Input.Region" class="form-control" />
            <span asp-validation-for="Input.Region" class="text-danger"></span>
          </div>
          <div class="form-group col-md">
            <input asp-for="Input.Zip" class="form-control" />
            <span asp-validation-for="Input.Zip" class="text-danger"></span>
          </div>
        </div>
        <div class="form-group row">
          <label asp-for="Input.Mobile" class="col-md-3 col-form-label font-weight-bold"></label>
          <div class="col-md">
            <input asp-for="Input.Mobile" class="form-control" />
            <span asp-validation-for="Input.Mobile" class="text-danger"></span>
          </div>
          <div class="col-md"></div>
        </div>
        <div class="form-group row">
          <label asp-for="Input.IDValue" class="col-md-3 col-form-label font-weight-bold"></label>
          <div class="col-md">
            <input asp-for="Input.IDValue" class="form-control" />
            <span asp-validation-for="Input.IDValue" class="text-danger"></span>
          </div>
          <div class="col-md"></div>
        </div>
      </div><!-- /.col -->
    </div>
    <div class="card-footer">
      <div class="form-group mb-0">
        <button type="submit" value="Create" class="btn btn-primary confirm-submit">
          <i class="far fa-dot-circle"></i> @Localizer["Save"]
        </button>
      </div>
    </div>
  </form>
</div>
