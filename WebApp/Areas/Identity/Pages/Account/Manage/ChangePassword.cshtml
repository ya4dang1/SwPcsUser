@page
@model ChangePasswordModel
@{
  ViewData["Title"] = "Change password";
  Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="card card-sm">
  <div class="card-header">
    <h4>
      <strong>@Localizer["Change Password"]</strong>
      <small> </small>
    </h4>
  </div>
  <form id="change-password-form" method="post">
    <div class="card-body">
      <div class="col-xl-8 offset-xl-2">
        <div class="row">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <ul>
            <li class="d-none"></li>
          </ul>
        </div>
        <div class="row">
          <div class="form-group col-md-6">
            <label asp-for="Input.OldPassword" class="control-label"></label>
            <input type="password" asp-for="Input.OldPassword" class="form-control" />
            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
          </div>
        </div>
        <div class="row">
          <div class="form-group col-md-6">
            <label asp-for="Input.NewPassword" class="control-label"></label>
            <input type="password" asp-for="Input.NewPassword" class="form-control" />
            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
          </div>
          <div class="form-group col-md-6">
            <label asp-for="Input.ConfirmPassword" class="control-label"></label>
            <input type="password" asp-for="Input.ConfirmPassword" class="form-control" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
          </div>
        </div>
      </div><!-- /.col -->
    </div>
    <div class="card-footer">
      <div class="form-group mb-0">
        <button type="submit" value="Create" class="btn btn-primary confirm-submit">
          <i class="far fa-dot-circle"></i> @Localizer["Save"]
        </button>
      </div>
    </div>
  </form>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}