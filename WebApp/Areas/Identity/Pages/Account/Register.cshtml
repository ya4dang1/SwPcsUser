@page

@model RegisterModel
@{
  ViewData["Title"] = "Register User";
  Layout = "~/Pages/Shared/_BlankLayout.cshtml";
}

<div class="container">
  <div class="row">
    <div class="col-11">
      <div class="float-right"><partial name="_SelectLanguagePartial" /></div>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card-group">
        <div class="card p-4">
          <div class="card-body">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
              <h2>@Localizer["Register"]</h2>
              <p class="text-muted"></p>
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <i class="icon-user"></i>
                  </span>
                </div>
                <input asp-for="Input.UserName" class="form-control" placeholder="@Localizer["User Name"]" />
              </div>
              <span asp-validation-for="Input.UserName" class="text-danger"></span>
              <div class="input-group mt-3">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <i class="icon-envelope"></i>
                  </span>
                </div>
                <input asp-for="Input.Email" class="form-control" placeholder="@Localizer["Email"]" />
              </div>
              <span asp-validation-for="Input.Email" class="text-danger"></span>
              <div class="input-group mt-3">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <i class="icon-lock"></i>
                  </span>
                </div>
                <input asp-for="Input.Password" class="form-control" placeholder="@Localizer["Password"]" />
              </div>
              <span asp-validation-for="Input.Password" class="text-danger"></span>
              <div class="input-group mt-3">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <i class="icon-lock"></i>
                  </span>
                </div>
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="@Localizer["Confirm Password"]" />
              </div>
              <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
              <div class="row mt-4">
                <div class="col-md-5 text-center text-md-left">
                  <button class="btn btn-primary px-4" type="submit">@Localizer["Submit"]</button>
                </div>
                <div class="col-md-7 text-md-right text-center mt-4 mt-md-0">
                  <a class="btn btn-link p-0" asp-page="./Login">@Localizer["Sign In to your account"]</a> <br />
                </div>
              </div>
            </form>
          </div>
        </div>
        <div class="card text-white bg-primary py-5 d-md-down-none" style="width: 44%">
          <div class="card-body text-center d-flex">
            <div class="m-auto">
              <h1>Demo</h1>
              <h4>@Localizer["Cobrand Card System"]</h4>
              <p></p>
              <p>@Localizer["Personal Cards Management System"]</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
