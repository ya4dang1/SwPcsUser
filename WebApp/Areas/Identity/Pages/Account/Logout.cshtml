@page
@model LogoutModel
@{
  ViewData["Title"] = Localizer["Log out"];
  Layout = "~/Pages/Shared/_BlankLayout.cshtml";
}

<header class="d-none">
  <h1>@ViewData["Title"]</h1>
  <p>@Localizer["You have successfully logged out of the application."]</p>
</header>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="clearfix text-center">
        <h1 class="display-3 mr-4"><i class="icon-lock-open icons d-block mt-4"></i></h1>
        <h4 class="pt-3">@Localizer["You have logged out!"]</h4>
        @Localizer[@"<p class="""">Click <a href=""{0}"">here</a> to log in again.</p>","./Login"]
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function () {
    // For toastr
    if(GetURLParameter('toast') == 'logout'){
      toastr.info('@Localizer["Your session has been cleared."]', '@Localizer["Log out"]');
    }
  });
</script>