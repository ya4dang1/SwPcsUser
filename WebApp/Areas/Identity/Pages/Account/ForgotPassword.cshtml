@page
@model ForgotPasswordModel
@{
  ViewData["Title"] = "Forgot your password?";
  Layout = "~/Pages/Shared/_BlankLayout.cshtml";
}

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card-group">
        <div class="card p-4">
          <div class="card-body">
            <div class="float-right"><partial name="_SelectLanguagePartial" /></div>
            <form id="account" method="post">
              <h1>Forgot Password?</h1>
              <p class="text-muted">Enter your email</p>
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <i class="icon-envelope"></i>
                  </span>
                </div>
                <input asp-for="Input.UserName" class="form-control" placeholder="User Name" />
              </div>
              <span asp-validation-for="Input.UserName" class="text-danger"></span>
              <div class="input-group mt-3">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <i class="icon-lock"></i>
                  </span>
                </div>
                <input asp-for="Input.Email" class="form-control" placeholder="Email" />
              </div>
              <span asp-validation-for="Input.Email" class="text-danger"></span>
              <div class="row">
                <div class="col-4">
                  <button class="btn btn-primary px-4" type="submit">Submit</button>
                </div>
                <div class="col-8 text-right">
                  <a class="btn btn-link p-0" asp-page="./Login">Login</a> <br />
                </div>
              </div>
            </form>
          </div>
        </div>
        <div class="card text-white bg-primary py-5 d-md-down-none" style="width: 44%">
          <div class="card-body text-center d-flex">
            <div class="m-auto">
              <h1>Swiftwire</h1>
              <h4>Cobrand Card System</h4>
              <p></p>
              <p>Personal Cards Management System</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
