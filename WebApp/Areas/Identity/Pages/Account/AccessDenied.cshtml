  Layout = "~/Pages/Shared/_BlankLayout.cshtml";
}

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="clearfix text-center">
        <h1 class="display-3 mr-4 text-danger"><i class="fas fa-exclamation-triangle d-block mt-4"></i></h1>
        <h4 class="pt-3 text-danger">@Localizer["You do not have access to this resource."]</h4>        
          @Localizer[@"<p class="""">Click <a href=""{0}"">here</a> to log in again.</p>","./Login"]
      </div>
    </div>
  </div>
</div>