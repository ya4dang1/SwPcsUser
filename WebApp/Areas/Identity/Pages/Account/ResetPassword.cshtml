@page
@model ResetPasswordModel
@{
  ViewData["Title"] = Localizer["Reset password"];
  Layout = "~/Pages/Shared/_BlankLayout.cshtml";
}

<div class="container">
  <div class="row">
    <div class="col-11">
      <div class="float-right"><partial name="_SelectLanguagePartial" /></div>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card-group">
        <div class="card p-4">
          <div class="card-body">
            <form id="account" method="post">
              <h2>@ViewData["Title"]</h2>
              <p class="text-muted"></p>
              <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <input type="hidden" asp-for="Input.Code" />
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <i class="icon-user"></i>
                  </span>
                </div>
                <input asp-for="Input.UserName" class="form-control" />
              </div>
              <span asp-validation-for="Input.UserName" class="text-danger"></span>
              <div class="input-group mt-3">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <i class="icon-lock"></i>
                  </span>
                </div>
                <input asp-for="Input.Password" class="form-control" />
              </div>
              <span asp-validation-for="Input.Password" class="text-danger"></span>
              <div class="input-group mt-3">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <i class="icon-lock"></i>
                  </span>
                </div>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
              </div>
              <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
              <div class="row mt-4">
                <div class="col-md-12 text-center text-md-left">
                  <button class="btn btn-primary px-4" type="submit">@Localizer["Submit"]</button>
                </div>
              </div>
            </form>
          </div>
        </div>
        <div class="card text-white bg-primary py-5 d-md-down-none" style="width: 44%">
          <div class="card-body text-center d-flex">
            <div class="m-auto">
              <h1>@ResellerConfig.Value.Name</h1>
              <h4>@Localizer["Cobrand Card System"]</h4>
              <p></p>
              <p>@Localizer["Personal Cards Management System"]</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
